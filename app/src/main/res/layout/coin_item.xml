<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/home_coin_view">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:clickable="true">

    <TextView
        android:id="@+id/home_coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="Bitcoin"
        app:layout_constraintStart_toEndOf="@+id/home_coin_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/home_coin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15151151"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/home_coin_image"
        app:layout_constraintTop_toBottomOf="@+id/home_coin_name" />

    <ImageView
        android:id="@+id/home_coin_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.github.ivbaranov.mfb.MaterialFavoriteButton
        android:id="@+id/currencyListFavButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mfb_animate_favorite="true"
        app:mfb_animate_unfavorite="true"
        app:mfb_bounce_duration="300"
        app:mfb_favorite_image="@drawable/ic_star_border_black_24dp"
        app:mfb_not_favorite_image="@drawable/ic_star_border_black_24dp"
        app:mfb_padding="16"
        app:mfb_rotation_angle="360"
        app:mfb_rotation_duration="400"
        app:mfb_size="56" />

    <TextView
        android:id="@+id/home_hour_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="0.0"
        app:layout_constraintStart_toEndOf="@+id/home_coin_image"
        app:layout_constraintTop_toBottomOf="@+id/home_coin_price" />

    <TextView
        android:id="@+id/home_day_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="0.0"
        app:layout_constraintEnd_toStartOf="@+id/home_week_change"
        app:layout_constraintStart_toEndOf="@+id/home_hour_change"
        app:layout_constraintTop_toBottomOf="@+id/home_coin_price" />

    <TextView
        android:id="@+id/home_week_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_coin_price" />

    <TextView
        android:id="@+id/home_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="01"
        app:layout_constraintBottom_toTopOf="@+id/home_coin_image"
        app:layout_constraintEnd_toStartOf="@+id/home_coin_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>